<UserControl x:Class="PrismAppDemo.Views.MessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10" MinWidth="200" MaxWidth="500">
            <TextBlock Text="{Binding Message}" TextWrapping="WrapWithOverflow" Margin="10" HorizontalAlignment="Center"/>
            <Button Content="OK" Command="{Binding CloseCommand}" Width="50" Height="20" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
